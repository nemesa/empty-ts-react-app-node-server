{
  "scripts": {
    "dev": "npm-run-all --parallel dev:watch dev:start",
    "dev:watch": "webpack --mode=development --env development --progress --watch",
    "dev:start": "nodemon ./dist/dev/empty-ts-react-app-node-server.server.js",
    "build": "npm run lint && npm run build:prod",
    "build:dev": "npm run lint && webpack --mode=development --env development --progress",
    "build:prod": "webpack --mode=production --env production --progress",
    "lint": "npm run lint:src",
    "lint:src": "eslint ./src/**/*.{ts,tsx}",
    "lint:test": "eslint ./tests/**/*.{ts,tsx}",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest ./tests/unit"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "copy-webpack-plugin": "^10.2.0",
    "css-loader": "^6.5.1",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "file-loader": "^6.2.0",
    "html-loader": "^3.0.1",
    "jest": "^27.4.5",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "sass": "^1.45.1",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.1"
  },
  "dependencies": {
    "express": "^4.17.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  }
